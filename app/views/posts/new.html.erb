<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <p><%= error %></p>
  <% end%>
<% end %>

<%= form_for @post do |f| %>

<%= f.label 'Title' %><br>
<%= f.text_field :title %><br>

<%= f.label 'Content' %><br>
<%= f.text_area :content %><br>

<%= collection_select(:post, :blogger_id, Blogger.all, :id, :name, prompt: true) %><br>
<%= collection_select(:post, :destination_id, Destination.all, :id, :name, prompt: true) %><br>

<%= f.submit 'Submit Post' %>
<% end %>
