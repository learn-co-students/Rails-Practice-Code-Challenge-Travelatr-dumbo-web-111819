<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <p><%= error %></p>
  <% end%>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label 'Name' %><br>
<%= f.text_field :name %><br>

<%= f.label 'Age' %><br>
<%= f.text_field :age %><br>

<%= f.label 'Bio' %><br>
<%= f.text_area :bio %><br>

<%= f.submit 'Submit Blogger' %>
<% end %>

